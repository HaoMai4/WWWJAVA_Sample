    <servlet>
        <servlet-name>initParametersServlet</servlet-name>
        <servlet-class>iuh.fit.se.servletsample.InitParametersServlet</servlet-class>

        <init-param>
            <param-name>username</param-name>
            <param-value>u002</param-value>
        </init-param>
        <init-param>
            <param-name>email</param-name>
            <param-value>u002@gmail.com</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>initParametersServlet</servlet-name>
        <url-pattern>/init-param</url-pattern>
    </servlet-mapping>

    <!--    Global   -->
    <context-param>
        <param-name>appName</param-name>
        <param-value>My Servlet WebApp</param-value>
    </context-param>

    <context-param>
        <param-name>supportEmail</param-name>
        <param-value>support@gmail.com</param-value>
    </context-param>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>iuh.fit.se.filtersample.filters.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>u001</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>


